generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Products {
  productid Int    @id @default(autoincrement())
  name      String
  price     Int
  image     String
  stock     Int

  @@map("products")
}

model Carts {
  cartid    Int @id @default(autoincrement())
  productid Int
  quantity  Int

  @@map("carts")
}

model Transactions {
  trid       Int @id @default(autoincrement())
  productid  Int
  quantity   Int
  totalprice Int
}
