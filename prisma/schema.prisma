generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Products {
  productid Int     @id @default(autoincrement())
  name      String
  price     Int
  image     String
  stock     Int
  Carts     Carts[]

  @@map("products")
}

model Carts {
  cartid    Int @id @default(autoincrement())
  productid Int
  quantity  Int

  products Products @relation(fields: [productid], references: [productid])

  @@map("carts")
}
